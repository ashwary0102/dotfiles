" Load vundle and plugin stuff
if isdirectory($HOME . "/.vim/bundle/Vundle.vim")
    let g:has_vundle = v:true
    source $HOME/bin/dotfiles/vim/plugins.vim
else
    let g:has_vundle = v:false
endif

" Load options
source $HOME/bin/dotfiles/vim/options.vim

" Load autocmds
source $HOME/bin/dotfiles/vim/autocmds.vim

" Load mappings
source $HOME/bin/dotfiles/vim/mappings.vim
